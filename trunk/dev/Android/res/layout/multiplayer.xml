<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="fill_parent" android:layout_width="fill_parent"
	android:id="@+id/linearLayout1" android:orientation="vertical"
	android:background="@color/Gray">

	<RelativeLayout android:id="@+id/relativeLayout3"
		android:layout_width="fill_parent" android:background="@drawable/menutoolbarbackgroundxml"
		android:layout_height="50dip">
		<Button android:id="@+id/MultiPlayerGameButtonBack"
			android:text="@string/Back" android:layout_height="wrap_content"
			android:layout_width="wrap_content"></Button>
		<TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:id="@+id/textView5"
			android:textSize="20dip" android:textColor="@color/White"
			android:layout_centerInParent="true" android:text="@string/MultiPlayer"></TextView>
		<Button android:id="@+id/MultiPlayerGameButtonConnection"
			android:text="@string/Connection" android:layout_height="wrap_content"
			android:layout_width="wrap_content" android:layout_alignParentRight="true"></Button>
	</RelativeLayout>
	<RelativeLayout android:layout_width="fill_parent"
		android:id="@+id/relativeLayout1" android:layout_height="fill_parent">
		<LinearLayout android:layout_width="fill_parent"
			android:gravity="center_vertical|center_horizontal" android:id="@+id/linearLayout1"
			android:layout_height="wrap_content" android:orientation="vertical"
			android:layout_centerVertical="true">
			<TextView android:layout_width="wrap_content" android:text="TextView"
				android:id="@+id/MultiPlayerGameUserName" android:layout_height="wrap_content"></TextView>
			<TableLayout android:id="@+id/tableLayout1"
				android:layout_width="fill_parent" android:gravity="center_vertical|center_horizontal"
				android:layout_height="wrap_content">
				<TableRow android:gravity="center_vertical|center_horizontal"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:id="@+id/tableRow1">
					<TextView android:layout_height="wrap_content"
						android:layout_width="wrap_content" android:text="@string/UserName"
						android:id="@+id/textView1" android:layout_gravity="center_vertical"
						android:textColor="@color/White"></TextView>
					<EditText android:layout_height="wrap_content"
						android:maxWidth="140dip"
						android:layout_width="140dip" android:singleLine="true"
						android:id="@+id/MultiPlayerGameEditTextName" android:lines="1"></EditText>
				</TableRow>
				<TableRow android:gravity="center_vertical|center_horizontal"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:id="@+id/tableRow2">
					<TextView android:layout_height="wrap_content"
						android:layout_width="wrap_content" android:text="@string/Password"
						android:id="@+id/textView1" android:layout_gravity="center_vertical"
						android:textColor="@color/White"></TextView>
					<EditText android:password="true" android:layout_height="wrap_content" android:maxWidth="140dip"
						android:layout_width="140dip" android:singleLine="true"
						android:id="@+id/MultiPlayerGameEditTextPassword" android:lines="1"></EditText>
				</TableRow>
			</TableLayout>
			<CheckBox android:layout_width="wrap_content"
				android:id="@+id/MultiPlayerGameCheckBoxConnection" android:text="@string/Autologin"
				android:layout_height="wrap_content"></CheckBox>
			<CheckBox android:layout_width="wrap_content"
				android:id="@+id/MultiPlayerGameCheckBoxPassword" android:text="@string/RememberPassword"
				android:layout_height="wrap_content"></CheckBox>
			<Button android:layout_width="wrap_content" android:id="@+id/MultiPlayerGameNewAccount"
				android:text="@string/NewAccount" android:layout_height="40dip"></Button>
		</LinearLayout>
	</RelativeLayout>

</LinearLayout>


