<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="fill_parent" android:layout_width="fill_parent"
	android:id="@+id/linearLayout1" android:orientation="vertical" android:background="@color/Gray">
	
	<RelativeLayout android:id="@+id/relativeLayout3"
		android:layout_width="fill_parent" android:background="@drawable/menutoolbarbackgroundxml"
		android:layout_height="50dip">
		<TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:id="@+id/textView5"
			android:textSize="20dip" android:textColor="@color/White"
			android:layout_centerInParent="true" android:text="@string/NewAccount"></TextView>
		<Button android:id="@+id/NewAccountOnLineButtonCancel" android:text="@string/Back" android:layout_height="wrap_content" android:layout_width="wrap_content"></Button>
		<Button android:id="@+id/NewAccountOnLineButtonConnection" android:text="@string/Connection" android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_alignParentRight="true"></Button>
	</RelativeLayout>


	<LinearLayout android:layout_width="fill_parent"
		android:orientation="vertical" android:id="@+id/linearLayout1"
		android:layout_centerInParent="true"
		android:gravity="center_vertical|center_horizontal" android:layout_height="fill_parent">

		<RelativeLayout android:layout_height="wrap_content"
			android:layout_width="fill_parent" android:id="@+id/relativeLayout2"
			android:gravity="center_vertical">
			<TextView android:text="" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:layout_centerInParent="true"
				android:id="@+id/NewAccountOnLineUserName"></TextView>
		</RelativeLayout>

		<TableLayout android:id="@+id/tableLayout1"
			android:layout_height="wrap_content" android:layout_width="fill_parent"
			android:gravity="center_vertical|center_horizontal">
			<TableRow android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:id="@+id/tableRow1"
				android:gravity="center_vertical|center_horizontal">
				<TextView android:layout_gravity="center_vertical"
					android:layout_height="wrap_content" android:id="@+id/textView1"
					android:layout_width="wrap_content" android:text="@string/UserName"></TextView>

				<EditText android:layout_width="140dip" android:maxWidth="140dip"
					android:id="@+id/NewAccountOnLineEditTextName"
					android:layout_height="wrap_content"></EditText>
			</TableRow>
			<TableRow android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:id="@+id/tableRow2"
				android:gravity="center_vertical|center_horizontal">
				<TextView android:layout_gravity="center_vertical"
					android:layout_height="wrap_content" android:id="@+id/textView1"
					android:layout_width="wrap_content" android:text="@string/Password"></TextView>

				<EditText android:layout_width="140dip" android:maxWidth="140dip"
					android:password="true" android:id="@+id/NewAccountOnLineEditTextPassword1"
					android:layout_height="wrap_content"></EditText>

			</TableRow>
			<TableRow android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:id="@+id/tableRow2"
				android:gravity="center_vertical|center_horizontal">
				<TextView android:layout_gravity="center_vertical"
					android:layout_height="wrap_content" android:id="@+id/textView1"
					android:layout_width="wrap_content" android:text="@string/Verification"></TextView>

				<EditText android:layout_width="140dip" android:maxWidth="140dip"
					android:password="true" android:id="@+id/NewAccountOnLineEditTextPassword2"
					android:layout_height="wrap_content"></EditText>
			</TableRow>
		</TableLayout>
		<CheckBox android:layout_height="wrap_content"
			android:layout_width="wrap_content" android:id="@+id/NewAccountOnLineCheckBoxConnection"
			android:text="@string/Autologin"></CheckBox>
		<CheckBox android:layout_height="wrap_content"
			android:layout_width="wrap_content" android:id="@+id/NewAccountOnLineCheckBoxPassword"
			android:text="@string/RememberPassword"></CheckBox>

	</LinearLayout>
	
	</LinearLayout>

