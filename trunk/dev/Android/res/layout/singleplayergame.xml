<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout android:id="@+id/relativeLayout1" android:layout_width="fill_parent" android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android">
        
        <LinearLayout android:id="@+id/linearLayout1" android:layout_height="wrap_content" android:layout_width="match_parent" android:orientation="vertical" android:gravity="center_vertical|center_horizontal" android:layout_centerInParent="true" android:background="@color/Grey">
            <Gallery android:gravity="bottom" android:id="@+id/galleryz" android:layout_width="fill_parent" android:layout_height="match_parent"></Gallery>
            <TextView android:layout_height="wrap_content" android:id="@+id/nomMap" android:layout_width="wrap_content" android:text=""></TextView>
        
        	<TableLayout android:id="@+id/tableLayout1" android:layout_height="wrap_content" android:stretchColumns="2" android:layout_width="match_parent" android:gravity="center_vertical|center_horizontal">
        		<TableRow android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/tableRow1" android:gravity="center_vertical|center_horizontal">
        			<TextView android:id="@+id/textView2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/SinglePlayerGameType"></TextView>
        			<Spinner android:id="@+id/typePartie" android:layout_width="wrap_content" android:layout_height="wrap_content" android:entries="@array/SinglePlayerGameType"></Spinner>
        		</TableRow>
        		<TableRow android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/tableRow2" android:gravity="center_vertical|center_horizontal">
        			<TextView android:id="@+id/textView3" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/SinglePlayerGameEnemiesNumber"></TextView>
        			<Spinner android:id="@+id/nbEnnemis" android:layout_width="wrap_content" android:layout_height="wrap_content" android:entries="@array/SinglePlayerEnemiesNumber"></Spinner>
        		</TableRow>
        		<TableRow android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/tableRow2" android:gravity="center_vertical|center_horizontal">
        			<TextView android:id="@+id/textView4" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/SinglePlayerGameEnemiesDifficulty"></TextView>
        			<Spinner android:id="@+id/difficulty" android:layout_width="wrap_content" android:layout_height="wrap_content" android:entries="@array/SinglePlayerDifficulty"></Spinner>
        		</TableRow>

            </TableLayout>
        
        </LinearLayout>
        
        
        <RelativeLayout android:layout_height="wrap_content" android:layout_alignParentBottom="true" android:id="@+id/relativeLayout2" android:layout_width="match_parent" android:background="@color/Grey">
            <Button android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_alignParentRight="true" android:id="@+id/SinglePlayerGameButtonGo" android:text="@string/ButtonCreate"></Button>
            <Button android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/SinglePlayerGameButtonCancel" android:text="@string/ButtonCancel"></Button>
        </RelativeLayout>    
        
    </RelativeLayout>

