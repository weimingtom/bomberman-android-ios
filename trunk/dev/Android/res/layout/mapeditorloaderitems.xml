<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
	android:layout_width="fill_parent" android:background="@color/White"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="wrap_content" android:gravity="center_horizontal">

	<ImageView android:id="@+id/mapBitmap" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:paddingLeft="20px"
		android:paddingRight="20px" />

	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="vertical" android:layout_height="wrap_content"
		android:layout_weight="1" android:gravity="center_horizontal"
		android:layout_gravity="center_horizontal" android:layout_width="wrap_content">

		<TextView android:id="@+id/mapName" android:layout_width="fill_parent"
			android:layout_height="fill_parent" android:textSize="16px"
			android:textStyle="bold" android:layout_gravity="center_horizontal" />

		<TextView android:id="@+id/mapOwner" android:layout_width="fill_parent"
			android:layout_height="fill_parent" />

	</LinearLayout>

</LinearLayout>