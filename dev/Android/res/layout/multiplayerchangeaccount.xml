<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="fill_parent" android:layout_width="fill_parent"
	android:id="@+id/linearLayout1" android:orientation="vertical"
	android:background="@color/Gray">

	<RelativeLayout android:id="@+id/relativeLayout3"
		android:layout_width="fill_parent" android:background="@drawable/menutoolbarbackgroundxml"
		android:layout_height="50dip">
		<Button android:layout_width="wrap_content" android:text="@string/Back"
			android:layout_height="wrap_content" android:layout_centerVertical="true"
			android:id="@+id/buttonCancel"></Button>
		<TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:id="@+id/textView5"
			android:textSize="20dip" android:textColor="@color/White"
			android:layout_centerInParent="true" android:text="@string/ChangeAccount"></TextView>
		<Button android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_alignParentRight="true"
			android:layout_centerInParent="true" android:text="@string/Ok"
			android:id="@+id/buttonValid"></Button>
	</RelativeLayout>
	<LinearLayout android:layout_width="fill_parent"
		android:id="@+id/linearLayout2" android:orientation="vertical"
		android:layout_height="fill_parent" android:gravity="center_vertical|center_horizontal">
		<TextView android:layout_width="wrap_content"
			android:textColor="@color/White" android:text="@string/UserName"
			android:id="@+id/textUser" android:layout_height="wrap_content"></TextView>
		<EditText  android:layout_width="120dip"
			android:id="@+id/editUserName" android:layout_height="50dip"></EditText>
		<TextView android:layout_width="wrap_content"
			android:textColor="@color/White" android:text="@string/Password"
			android:id="@+id/textPassword" android:layout_height="wrap_content"></TextView>
		<EditText  android:layout_width="120dip"
			android:id="@+id/editPassword" android:layout_height="50dip"
			android:password="true"></EditText>
	</LinearLayout>

</LinearLayout>

